@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/style.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header class="header flex">
        <nav class="header__nav flex">
            <ul class="list__reset nav__list flex">
                @await Component.InvokeAsync("DesktopView")
                <li class="nav__item"><a class="nav__link" asp-controller="Hero" asp-action="Index">Главная</a></li>
                <li class="nav__item"><a class="nav__link" asp-controller="Services" asp-action="Index">Услуги</a></li>
                <li class="nav__item"><a class="nav__link" asp-controller="Projects" asp-action="Index">Проекты</a></li>
                <li class="nav__item"><a class="nav__link" asp-controller="Blogs" asp-action="Index">Блог</a></li>
                <li class="nav__item"><a class="nav__link" asp-controller="Contacts" asp-action="Index">Контакты</a></li>
                @await Component.InvokeAsync("LogoutView")
            </ul>

            <div class="header__descr">@SiteConfig.GetInstance().Motto</div>
        </nav>
    </header>

    <main>
    @RenderBody()
    </main>

    <script src="~/js/script.js"></script>
</body>
</html>