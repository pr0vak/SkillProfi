@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/css/bootstrap.css" >
    

    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header class="header flex">
        <nav class="header__nav flex">
            <ul class="list__reset nav__list flex">
                @await Component.InvokeAsync("DesktopView")
                <li class="nav__item"><a class="nav__link" asp-controller="Hero" asp-action="Index">Главная</a></li>
                <li class="nav__item"><a class="nav__link" asp-controller="Services" asp-action="Index">Услуги</a></li>
                <li class="nav__item"><a class="nav__link" asp-controller="Projects" asp-action="Index">Проекты</a></li>
                <li class="nav__item"><a class="nav__link" asp-controller="Blogs" asp-action="Index">Блог</a></li>
                <li class="nav__item"><a class="nav__link" asp-controller="Contacts" asp-action="Index">Контакты</a></li>
                @await Component.InvokeAsync("LogoutView")
            </ul>

            <div class="header__descr">@SiteConfig.GetInstance().Motto</div>
        </nav>
    </header>

    <main>
    @RenderBody()
    </main>

    <script src="~/js/script.js"></script>
</body>
</html>